{
	"name": "hex-map",
	"author": "fmdm",
	"license": "ISC",
	"scripts": {
		"dev": "concurrently \"pnpm --filter dockview-svelte run dev:repo\" \"pnpm --filter webgpgpu run watch\" \"pnpm --filter hexaboard run dev:repo\" \"pnpm --filter hexagame run dev\"",
		"dev:dockview-svelte": "pnpm --filter dockview-svelte run dev:repo",
		"dev:hexaboard": "pnpm --filter hexaboard run dev:repo",
		"dev:hexagame": "pnpm --filter hexagame run dev",
		"dev:webgpgpu": "pnpm --filter webgpgpu run watch",
		"build:all": "lerna run build --stream"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eddow/hex-map.git"
	},
	"private": true,
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"concurrently": "^9.1.2"
	},
	"devDependencies": {
		"lerna": "^8.1.9"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"nx"
		]
	}
}
