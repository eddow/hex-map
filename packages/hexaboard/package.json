{
	"name": "hexaboard",
	"version": "0.0.1",
	"description": "A minimal 3D hexagonal game board using Three.js",
	"main": "index.js",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"types": "dist/src/main.d.ts",
	"module": "dist/hexaboard.mjs",
