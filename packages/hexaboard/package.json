{
	"name": "hexaboard",
	"version": "1.0.0",
	"description": "A minimal 3D hexagonal game board using Three.js",
	"main": "dist/index.mjs",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"types": "dist/src/main.d.ts",
	"module": "dist/hexaboard.js",
	"exports": {
		".": {
			"types": "./dist/src/main.d.ts",
			"import": "./dist/hexaboard.js"
		}
	},
	"scripts": {
		"vite": "vite dev",
		"build": "vite build",
		"dev:repo": "vite build --watch"
	},
	"peerDependencies": {
		"three": "^0.172.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.10.7",
		"@types/three": "^0.172.0",
		"typescript": "^5.7.3",
		"vite": "^6.0.7",
		"vite-plugin-dts": "^4.5.0"
	},
	"author": "fmdm",
	"license": "ISC",
	"dependencies": {
		"@babel/preset-typescript": "^7.26.0"
	}
}
