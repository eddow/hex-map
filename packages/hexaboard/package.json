		".": {
			"types": "./dist/src/main.d.ts",
			"require": "./dist/hexaboard.js",
			"import": "./dist/hexaboard.mjs"
		}
	},
	"scripts": {
		"vite": "vite dev",
		"build": "vite build"
	},
	"dependencies": {
		"three": "^0.150.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/three": "^0.172.0",
		"typescript": "^5.7.3",
		"vite": "^6.0.7",
		"vite-plugin-dts": "^4.5.0"
	},
	"author": "fmdm",
	"license": "ISC"
}
